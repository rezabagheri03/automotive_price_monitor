# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=automotive_prices
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# WooCommerce Configuration
WOOCOMMERCE_URL=https://www.lavazembazaar.com
WOOCOMMERCE_CONSUMER_KEY=your_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=your_consumer_secret

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your_super_secret_key_here
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@lavazembazaar.com
EMAIL_TO=admin@lavazembazaar.com

# Proxy Configuration (optional)
PROXY_ENABLED=true
PROXY_LIST=proxy1:port,proxy2:port,proxy3:port
PROXY_AUTH=username:password

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Scraping Configuration
CONCURRENT_REQUESTS=50
DOWNLOAD_DELAY=2
RANDOMIZE_DOWNLOAD_DELAY=0.5
USER_AGENT_ROTATION=true

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here
ENABLE_MONITORING=true

# Backup Configuration
BACKUP_PATH=/var/backups/automotive_prices
BACKUP_RETENTION_DAYS=30

# Security Settings
JWT_SECRET_KEY=your_jwt_secret_key
BCRYPT_LOG_ROUNDS=12
SESSION_PERMANENT=false
PERMANENT_SESSION_LIFETIME=3600
